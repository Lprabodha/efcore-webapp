@using c_webproject.Models
@model IEnumerable<Book>

<h1 class="justify-content-sm-center">Book Management</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create Book</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Publish Date</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.Author</td>
                <td>@book.DateOfPublish.ToString("yyyy-MM-dd")</td>
                <td>@(book.DateOfRelease?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                <td>
                    <a class="btn btn-info btn-sm">Details</a>
                    <a class="btn btn-warning btn-sm">Edit</a>
                    <a class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
